<% if @next == 'true' %>
	
	$('#'+'<%= @game[:id] %>').parents('.ticket_partial_div').css('overflow-x', 'hidden');
	$('#'+'<%= @game[:id] %>').removeAttr('style');
	$('#'+'<%= @game[:id] %>').css('position', 'relative');
	$('#'+'<%= @game[:id] %>').css('left', '0px');
	$('#'+'<%= @game[:id] %>').animate({left: '-=100%'}, 300, function() {
	    $(this).css('left', '100%');
		$(this).html("<%=j render :partial => 'searches/ticket', :locals => {:game => @game, :game_data => @game_data, :price_min => @price_min, :price_max => @price_max, :number => @number} %>")
		$(".flip-container").show();
		colorBorders();
		flipper();
		seatView();
		$(this).animate({left: '-=100%'}, 300);
		
	  });
<% else %>
	
	$('#'+'<%= @game[:id] %>').parents('.ticket_partial_div').css('overflow-x', 'hidden');	
	$('#'+'<%= @game[:id] %>').removeAttr('style');
	$('#'+'<%= @game[:id] %>').css('position', 'relative');
	$('#'+'<%= @game[:id] %>').css('right', '0px');
	$('#'+'<%= @game[:id] %>').animate({right: '-=100%'}, 300, function() {
		$(this).css('right', '100%');
		$(this).html("<%=j render :partial => 'searches/ticket', :locals => {:game => @game, :game_data => @game_data, :price_min => @price_min, :price_max => @price_max, :number => @number} %>")
		$(".flip-container").show();
		colorBorders();
		flipper();
		seatView();
		$(this).animate({right: '-=100%'}, 300);
		
	  });
	
<% end %>

