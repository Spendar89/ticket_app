<div class="update_tickets_loader_div">
	<h1 style="color: #F3F3F3; font-size: 50px; margin-bottom: 10%; margin-top: 5%; margin-left: -5%; background: transparent">
		Updating Tickets...
	</h1>
	<%= image_tag "ajax-loader.gif", :style=> "margin-left: -10%" %>
</div>
<% counter = 0 %>
<% if @games.length == 0 %>
	<h1 style="color: #C13B36"> Sorry, no tickets were found </h1>
<% else %>
	<% @games.each_with_index do |game, i|  %>
		<% @game = game %>
		<% @game_data = @game.view_game_data(@price_min, @price_max, @number) %>
		<% if @game_data %>
			<% counter += 1 %>
			<% if i == 0 %>		
				<div class ="row" style="margin-top: -2%; margin-left: 0%;">
					<div class="ticket_partial_div span3" style="min-width: 24%; margin-left: 0%; margin-right: 1%;">
						<div class="span12" id="<%= @game[:id] %>">
							<%= render :partial => "ticket", :locals => {:game => @game, :game_data => @game_data, :price_min => @price_min, :price_max => @price_max, :number => @number} %>
						</div>
					</div>
	
			<% elsif i % 4 == 0 %>
			</div>
			<div class ="row" style="margin-top: -4%; margin-left: 0%;">
				<div class="ticket_partial_div span3" style=" min-width: 24%; margin-left: 0%; margin-right: 1%;">
					<div class="span12" id="<%= @game[:id] %>">
						<%= render :partial => "ticket", :locals => {:game => @game, :game_data => @game_data, :price_min => @price_min, :price_max => @price_max, :number => @number} %>
					</div>
				</div>
			<% else %>
				<div class="ticket_partial_div span3" style="min-width: 24%; margin-left: 0%; margin-right: 1%;">
					<%= content_tag :div, :class => 'span12', :id => @game[:id] do %>
							<%= render :partial => "ticket", :locals => {:game => @game, :game_data => @game_data, :price_min => @price_min, :price_max => @price_max, :number => @number} %>
					<% end %>
				</div>
			<% end %>
	<% end %>
	<% end %>
	<% if counter == 0 %>
		<h1 style="color: #C13B36"> Sorry, no games were found </h1>
	<% end %>
<% end %>








