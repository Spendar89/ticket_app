<div class="inner span10 offset1" style= "padding: 10px;">
	<div class="span12">
	<div class="span12">
		<h1 style="font-size: 50px; padding: 10px;"><%= @team[:name] %></h1>
	</div>

	<div class="row-fluid">
		<div class = "team_info span6">
			<%= render :partial => 'team_info', :locals => {:team => @team } %>
		</div>
		<div class = "search_form_div span6" >
			<h4>Refine Your Search: </h4>
			    <%= form_for @search, :method => 'put', :remote => true, :html => {:class => "form-search refine_search_form"} do |f| %>
			 <div class="control-group">
			    <div class="controls">
			 <%= f.text_field :team, :placeholder => @team[:name], :class => "input-search span12", :style => "height: 50px; font-size: 25px; line-height: 25px;" %>
			 	</div>
			 </div>
			 <div class="control-group">
			   <div class="control"s>
			      <%= f.hidden_field :price_min, :id => "price_min" %>
			      <%= f.hidden_field :price_max, :id => "price_max" %>
			      <%= f.text_field :date_start, :class => 'input span5 datepicker', :placeholder => "Start Date", :style =>"margin-right: 10px;" %>
			      <%= f.text_field :date_end, :class => 'input span5 datepicker', :placeholder => "End Date"%>
			   </div>
			  </div>
			  <div class="control-group">
			    <div class="controls">
			      <label id="slider_div">
			        <div class = "slider"></div>
			        <div id="amount_min"></div>
			        <div id="amount_max"></div>
			      </label>
			    </div>
			    </div>
			    <div class="control-group">
			      <div class="controls">
			        <%= f.submit "Find Tickets", :class => 'btn' %>
			        <% end %>
			        <div class="progress">
			          <div class="bar" style="width: 0%;"></div>
			        </div>
			      </div>
			    </div>
		</div>
	</div>
	<div class="row-fluid">
		<%= render :partial => 'update', :locals => {:team => @team, :total_tickets => @total_tickets, :date_start => @date_start, :date_end => @date_end, :price_min => @price_min, :price_max => @price_max, :games => @games} %>
	</div>
</div>
</div>
