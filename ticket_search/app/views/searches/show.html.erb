<h1><%= @team.name %> Tickets </h1>
<h4>Date Range: <%= @date_start %> until <%= @date_end %></h2>
<h4>Price Range: $<%= @price_min %> - $<%= @price_max %></h2>

<% @games.each do |game|  %>

<% best_ticket = game.best_ticket(@price_min, @price_max)%>

  <div class="game_tickets">
      <div class = top>
        <div class = "date">
         <%= game[:date] %>
        </div>
        <div class = opponent>
          <%= image_tag "#{game[:opponent].gsub(" ", "_")}.png", :width => "100px", :height => "110px" %>
        </div>
         <div class="ticket_rating">
           <table>
             <tr><td>AGP: $<%= game[:average_price] %></td></tr>
             <tr><td>GR: <%= game[:relative_popularity] %></td></tr>
             <tr><td>SR: <%= best_ticket[:ticket_rating] %></td></tr>
             <tr><td>Overall: <%= (best_ticket[:ticket_rating] * game[:popularity_multiplier]).to_i %></td></tr>
          </table>
         </div>
      </div>
      <div class = middle>
        <%= link_to "Purchase Ticket", best_ticket[:url], :target => 'blank', :class => "purchase_link" %>
      </div>
        <div class = "ticket_info">
          <div><%= best_ticket[:section]%></div>
          <div><%= best_ticket[:row]%></div>
          <div><%= best_ticket[:quantity]%></div>
          <div>$<%= best_ticket[:price]%></div>
        </div>
  </div>
<% end %>


